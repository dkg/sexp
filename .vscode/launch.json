    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: debug sexp cli",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/sexp-cli",
            "args": ["-i", "../samples/malformed/sexp-malformed-4"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ]
          },
          {
            "name": "C/C++: debug tests",
